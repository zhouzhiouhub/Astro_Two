---
import Base from "@/layouts/BaseLayout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import { t, isLocale } from "@/lib/i18n";

export async function getStaticPaths() {
  return [
    { params: { lang: "en" } },
    { params: { lang: "zh" } },
  ];
}
export const prerender = true;

const { lang } = Astro.params;
if (!lang || !isLocale(lang)) { throw new Error("Invalid locale"); }
const title = t("about", "title", lang);
const subtitle = t("about", "subtitle", lang);
const url = Astro.url.href;
---
<Base title={title} desc={subtitle} url={url} lang={lang}>
  <Header lang={lang} />
  <main class="container py-12">
    <h1 class="text-3xl font-semibold">{title}</h1>
    <p class="mt-2 text-[var(--color-muted)]">{subtitle}</p>
    <section class="mt-8 grid md:grid-cols-2 gap-6">
      <div class="card p-6">
        <h3 class="text-lg font-medium">{t('about','mission_title', lang)}</h3>
        <p class="mt-2 text-sm text-[var(--color-muted)]">{t('about','mission_text', lang)}</p>
      </div>
      <div class="card p-6">
        <h3 class="text-lg font-medium">{t('about','values_title', lang)}</h3>
        <p class="mt-2 text-sm text-[var(--color-muted)]">{t('about','values_text', lang)}</p>
      </div>
    </section>
    <Footer lang={lang} />
  </main>
</Base>
