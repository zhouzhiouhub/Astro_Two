---
import Base from "@/layouts/BaseLayout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import { t, isLocale } from "@/lib/i18n";

export async function getStaticPaths() {
  return [
    { params: { lang: "en" } },
    { params: { lang: "zh" } },
  ];
}
export const prerender = true;

const { lang } = Astro.params;
if (!lang || !isLocale(lang)) { throw new Error("Invalid locale"); }
const title = t("privacy", "title", lang);
const url = Astro.url.href;
---
<Base title={title} desc={title} url={url} lang={lang}>
  <Header lang={lang} />
  <main class="container py-12">
    <h1 class="text-3xl font-semibold">{title}</h1>
    <div class="prose dark:prose-invert mt-6">
      <p>{t('privacy','intro', lang)}</p>
      <h3>{t('privacy','title', lang)}</h3>
      <p>{t('privacy','collect', lang)}</p>
      <p>{t('privacy','usage', lang)}</p>
      <p>{t('privacy','contact', lang)}</p>
    </div>
    <Footer lang={lang} />
  </main>
</Base>
