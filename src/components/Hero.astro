---
import Badge from "./Badge.astro";
import CTA from "./CTA.tsx";
interface Props {
  badge: string;
  title: string;
  subtitle: string;
  ctaPrimary: string;
  ctaSecondary: string;
}
const { badge, title, subtitle, ctaPrimary, ctaSecondary } = Astro.props as Props;
---
<section class="relative overflow-hidden">
  <div aria-hidden="true" class="absolute inset-0 -z-10 bg-[radial-gradient(1200px_480px_at_50%_-20%,rgba(90,90,255,0.2),transparent)]"></div>
  <div class="container mx-auto py-20 md:py-28">
    <div class="max-w-3xl space-y-6">
      <Badge label={badge} />
      <h1 class="text-5xl md:text-6xl font-semibold tracking-tight">{title}</h1>
      <p class="text-lg text-[var(--color-muted)]">{subtitle}</p>
      <CTA client:load primary={ctaPrimary} secondary={ctaSecondary} />
    </div>
  </div>
  <div aria-hidden="true" class="pointer-events-none absolute -bottom-24 left-1/2 h-48 w-[1200px] -translate-x-1/2 rounded-full opacity-30 blur-3xl" style="background: var(--gradient-primary);"></div>
</section>
