---
interface Link {
  label: string;
  href: string;
}

interface Props {
  primary: Link;
  secondary?: Link;
}

const { primary, secondary } = Astro.props as Props;
---
<div class="flex w-full flex-col gap-3 sm:w-auto sm:flex-row">
  <a
    href={primary.href}
    class="btn btn-primary flex-1 rounded-full px-6 py-3 text-center text-base font-semibold sm:flex-none"
  >
    {primary.label}
  </a>
  {secondary && (
    <a
      href={secondary.href}
      class="btn btn-secondary flex-1 rounded-full px-6 py-3 text-center text-base font-semibold sm:flex-none"
    >
      {secondary.label}
    </a>
  )}
</div>

